<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/item_height"
    android:paddingTop="@dimen/list_view_divider_height_half"
    android:paddingBottom="@dimen/list_view_divider_height_half"
    android:background="?attr/itemBackgroundStyle"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text_title_number"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center_horizontal"
        android:minWidth="20dp"
        android:text="0" />

    <include layout="@layout/layout_song_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical" />

    <include layout="@layout/options_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" />

</LinearLayout>