<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearanceLarge"
        android:layout_margin="8dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/text_instruction"
        android:text="@string/intro_getting_started"/>

    <TextView
        android:id="@+id/text_instruction"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:gravity="center"
        android:text="@string/intro_instruction_getting_started"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/image"
        android:textAppearance="@style/TextAppearanceSmall"/>

    <ImageView
        android:id="@+id/image"
        android:layout_width="138.46dp"
        android:layout_height="220.76dp"
        android:layout_margin="5dp"
        android:layout_centerInParent="true"
        android:src="@drawable/screen_getting_started"
        android:scaleType="fitXY"/>

    <Button
        android:id="@+id/button_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_margin="8dp"
        android:layout_centerHorizontal="true"
        android:text="@string/intro_getting_started_done"
        style="@style/Base.Widget.AppCompat.Button"/>

</RelativeLayout>