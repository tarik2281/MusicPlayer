<?xml version="1.0" encoding="utf-8"?>
<resources>

        <style name="DarkTheme" parent="BaseDarkTheme">
                <item name="itemBackgroundStyle">@drawable/background_item_21</item>
                <item name="itemBackgroundHighlightStyle">@drawable/background_item_highlight_21</item>
                <item name="android:colorAccent">@color/white</item>
                <item name="android:alertDialogTheme">@style/AlertDialogTheme.Dark</item>
        </style>

        <style name="LightTheme" parent="BaseLightTheme">
                <item name="itemBackgroundStyle">@drawable/background_item_21</item>
                <item name="itemBackgroundHighlightStyle">@drawable/background_item_highlight_21</item>
                <item name="android:colorAccent">?attr/colorAccent</item>
                <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>
        </style>

        <style name="AlertDialogTheme" parent="android:Theme.Material.Light.Dialog.Alert">
                <item name="android:colorAccent">?attr/colorAccent</item>
                <item name="android:colorPrimary">?attr/colorPrimary</item>
        </style>

        <style name="AlertDialogTheme.Dark" parent="android:Theme.Material.Dialog.Alert">
                <item name="android:colorAccent">?attr/colorAccent</item>
                <item name="android:colorPrimary">?attr/colorPrimary</item>
        </style>


