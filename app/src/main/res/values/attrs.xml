<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="FastScroller">
        <attr name="thumbColor" format="color" />
    </declare-styleable>

    <declare-styleable name="LibraryBar">
        <attr name="itemLayout" format="reference" />
        <attr name="itemIconColor" format="color" />
        <attr name="itemStyleType" format="enum">
            <enum name="color" value="0" />
            <enum name="background" value="1" />
        </attr>
        <attr name="itemStyleNormal" format="color|reference" />
        <attr name="itemStyleHighlighted" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="CoverView">
        <attr name="sizeMode" format="enum">
            <enum name="none" value="0" />
            <enum name="squareWidth" value="1" />
            <enum name="squareHeight" value="2" />
            <enum name="flexible" value="3" />
        </attr>
        <attr name="squareWidth" format="boolean" />
        <attr name="flexibleSize" format="boolean" />
        <attr name="drawGradient" format="boolean" />
        <attr name="gradientColor" format="color" />
    </declare-styleable>

    <attr name="coverBackgroundStyle" format="reference" />
    <attr name="eqBandStyle" format="reference" />
    <attr name="eqThumbStyle" format="reference" />
    <attr name="itemBackgroundStyle" format="reference" />
    <attr name="itemBackgroundHighlightStyle" format="reference" />

    <attr name="colorAccentInverse" format="color" />
    <attr name="highlightBackgroundColor" format="color" />
    <attr name="fastScrollerStyle" format="reference" />
    <attr name="libraryBarSmallStyle" format="reference" />
    <attr name="libraryBarLargeStyle" format="reference" />
    <attr name="progressBarBackgroundColor" format="color" />
    <attr name="eqBandColor" format="color" />

    <declare-styleable name="menuIcons">
        <attr name="menuHomeIcon" format="reference" />
        <attr name="menuAddIcon" format="reference" />
        <attr name="menuUndoIcon" format="reference" />
        <attr name="menuRedoIcon" format="reference" />
        <attr name="menuResetIcon" format="reference" />
    </declare-styleable>

</resources>